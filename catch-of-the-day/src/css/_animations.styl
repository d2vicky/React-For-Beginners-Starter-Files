/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  max-height: 0
  padding 0 !important
  transform: translateX(-120%)
  transition 0.5s
  &.order-enter-active
    max-height: 60px
    padding 2rem 0 !important
    transform: translateX(0)

.order-exit
  transform: translateX(0)
  transition 0.5s
  &.order-exit-active
    padding 0
    transform: translateX(120%)
